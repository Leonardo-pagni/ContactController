@model ContactModel
@{
    ViewData["Title"] = "Add Contact";
}
<div class="text-center">

    <h1 class="display-4">Register Contact</h1>

</div>

<form asp-controller="Contact" asp-action="AddOrUpdate" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for ="Name" class="form-control"  placeholder="Enter Contact Name">
        </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter Contact E-mail">
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Contact Phone">
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
    <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index" role="button">Cancel</a>
</form>